/* 新闻图片列表 */
scroll-view { white-space:nowrap;}
.scroll_img {width:60vw; height:30vw; margin:3vw 5vw 0 2vw; border-radius:4px; padding:0; box-shadow:0 0 5px rgba(0,0,0,0.2); }

/*资源显示栏*/
.z_list_1 {width:90vw;  margin:1.4em 5vw 0 5vw; padding-bottom:1rem; border-bottom:0px solid #eceff1;}
.z_list_1>image {float:left; width:30vw; height:22.5vw;  display:block; border-radius:4px;}
.z_list_1>.r {float:right; width:57vw; height:24vw; overflow:hidden;  position:relative; top:-1vw;}
/* 图文列表右侧样式 */

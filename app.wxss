@import "utils/icon_font.wxss";
/* 全局 */
page {background:#fff;}
.clear {clear:both;}
.z_page_space {width:100%; height:15vw;}
.z_page_space_2 {width:100%; height:10vw;}
.z_page_space_3 {width:100%; height:5vw;}
.z_page_space_4 {width:90vw; height:5vw; border-bottom:1px solid #f5f5f5; margin:0 5vw 5vw 5vw; }
.page_foot_info {width:90vw; margin:0 5vw; font-size:0.8rem; height:3vw; line-height:3vw; color:#eceff1; text-align:center; border-bottom:1px solid #eceff1;}
.page_foot_info>text {position:relative; top:1.5vw; background:#fff; display:inline-block; padding:0 0.5rem;}
.po_top {position:fixed; top:0; padding:3vw 0; background:#fff; box-shadow:0 2px 2px rgba(0,0,0,0.1); width:100%;z-index:2;}

/* page_pack */
.page_pack_1 {width:90vw; margin:5vw; text-align:center; border:1px solid #eceff1; border-radius:4px; padding:2rem 0;}
.page_pack_2 {width:90vw; margin:5vw; border:1px solid #eceff1; border-radius:4px; padding:1vw 0;}
.page_pack_2>.l {float:left; width:25vw; min-height:25vw; line-height:25vw; text-align:center;}
.page_pack_2>.b {border-top:1px solid #eceff1; text-align:left;}
.page_pack_2>.b>.list { font-size:0.7rem; height:1.6rem; line-height:1.6rem; display:inline-block; margin:0.4rem 0.4rem;  background:#ddd; padding:0 0.6rem; border-radius:4px;}

/* page_baner */
.page_banner_pack {width:90vw; height:45vw; overflow:hidden; margin:5vw;  border-radius:4px; padding:0; box-shadow:0 0 3px rgba(0,0,0,0.2); }
.page_banner_pack>.text_pack {width:45vw; height:45vw; position:relative; top:0vw; z-index:1; padding-left:5vw;}
.page_banner_pack>.text_pack>.t {color:#2842a2; font-size:1.1rem; line-height:1.4; margin-top:9vw; display:inline-block;}
.page_banner_pack>.text_pack>.b {color:#2842a2; font-size:0.7rem; line-height:1.2; margin-top:1vw; display:block; opacity:0.5;}
.page_banner_pack>.text_pack>.k {color:#ff9800; font-size:0.9rem; line-height:1.2; margin-top:3vw; display:block; }
.page_banner_pack>image {width:90vw; height:45vw; position:relative; top:-45vw; z-index:0;}

/* btn_steam */
.btn_steam {width:90vw; height:2.4rem; line-height:2.4rem; text-align:center;  font-size:0.8rem; margin-left:5vw; letter-spacing:1px; }
.btn_steam .l {width:44.5vw; float:left;  background:#e3f2fd; border:1px solid #bbdefb; color:#2196f3; border-radius:4px 0 0 4px;}
.btn_steam .r {width:44.5vw; float:left; background:#e3f2fd; border:1px solid #bbdefb; color:#2196f3; border-radius:0 4px 4px 0; border-left:0;}
.btn_steam icon {font-size:0.8rem; margin-right:0.4rem;}

.btn_steam_2 {width:94vw; height:2.4rem; line-height:2.4rem; text-align:center;  font-size:0.8rem; margin-left:3vw;}
.btn_steam_2 .l {width:46.5vw; float:left;  background:#f5f5f5; border:1px solid #eeeeee; color:#bdbdbd; border-radius:4px 0 0 4px;}
.btn_steam_2 .r {width:46.5vw; float:left;  background:#f5f5f5; border:1px solid #eeeeee; color:#bdbdbd; border-radius:0 4px 4px 0; border-left:0;}
.btn_steam_2 b {color:#03a9f4; letter-spacing:1px;}

/* page_tips */
.page_tips_1 {width:90vw; height:2.4rem; line-height:2.4rem;  text-align:center;  font-size:0.7rem; margin-left:5vw; position:relative; top:2.4rem; color:#90a4ae;}
.page_tips_2 {width:90vw; height:1rem; line-height:1rem; font-size:0.7rem; margin-left:5vw; color:#90a4ae;}
.page_tips_3 {width:90vw; text-align:center; margin-left:5vw;}
.page_tips_3>icon {display:block; padding-top:30vh; font-size:6rem;}
.page_tips_3>.p {font-size:0.85rem; line-height:3; color:#90a4ae; letter-spacing:1px;}


.page_tips_4 {background:#fff8e1; color:#ffa000; border:1px solid #ffecb3; width:82vw; height:3rem; line-height:3rem; margin-left:5vw; font-size:0.9rem; border-radius:4px; padding:0 4vw;}
.page_tips_4>.l {display:inline-block;}
.page_tips_4>.l>icon {float:left; margin-right:0.2rem;}
.page_tips_4>.r {float:right;}

/* 首页城市切换 */
.index_city_title {width:90vw; height:10vw; margin:5vw 5vw 0 5vw; letter-spacing:0.1rem; color:#263238; display:block;}
.index_city_title picker {display:inline-block; float:left;  }

.index_city_title .icon {font-size:1.0rem; color:#3f51b5; }
.index_city_title .small_img {display:block; float:right; width:8vw; height:8vw;}
.city_pack {width:100vw; height:40vw;}
.city_pack .bg {width:90vw; height:40vw; display:block; margin-left:5vw;}

/* 标题 */
.z_page_title {font-size:1.4rem; width:90vw; margin:0 5vw; letter-spacing:0.1rem; color:#263238; }
.z_page_title>.link {display:inline-block; float:right; margin-left:0.8rem; font-size:0.8rem; position:relative; top:0.4rem; letter-spacing:0; border-radius:4px; padding:0.2rem 0.8rem;}
.z_page_title .icon {font-size:1.1rem; color:#3f51b5; position:relative; top:-0.1rem; left:0.2rem; }

/* 用户 */

.user_pack .user_name  {float:left; margin-left:0.5rem;}
.user_pack .user_rank  {float: left; font-size:0.7rem; margin-left:1rem;}
.user_pack .user_rank>.iconfont {color:#3f51b5; margin-right:0.2rem; font-size:0.8rem;}
.user_pack .user_rank>text { color:#90a4ae; }
.user_pack .user_state {float: right;  color:#4caf50;}
.user_pack .user_state>icon {font-size:1.2rem;}

/* 快速访问*/
.z_page_pack {width:95vw;  margin:0; margin-left:5vw;}
.z_f_4 {width:21vw; height:20vw; text-align:center; border:0px solid #eceff1; border-radius:4px; display:inline-block; margin:2vw 2vw 1vw 0; outline:none; background:#fff; line-height:1.2; padding:0; float:left; font-size:1rem; box-sizing:border-box;}
.z_f_4::after {border:0;}
.z_f_4>icon {margin:0.5rem auto 0 auto; display:inline-block; font-size:1.4rem; color:#3f51b5; position:relative; top:0.2rem; }
.z_f_4>text {font-size:0.7em; color:#90a4ae; position:relative; top:0.4rem; display:block;}
.z_f_line {width:90vw; height:1px; border-bottom:1px solid #f5f5f5;}
.z_f_4_k {width:5vw; height:12vw; display:inline-block;}

/* 新闻列表 */
.z_page_pack_2 {width:90vw; margin:0em 5vw 0em 5vw;}
.z_page_pack_2>.z_tab_li {border-bottom:2px solid #fff; display:inline-block; margin-right:1rem; padding-bottom:0.2rem; margin-bottom:0.6rem; color:#90a4ae;}
.z_page_pack_2>.act {border-bottom:2px solid #3f51b5; color:#3f51b5;}
.z_page_pack_2>.z_list_2 {width:90VW; height:2.4em; line-height:2.4em; display:block; overflow:hidden; font-size:0.9rem; color:#546e7a;}

<view>

    <view class="card" wx:for="{{list}}">

        <view class="organization-wrapper">
            <image class="org-avatar" mode="aspectFill" src="{{item.img}}"></image> 
            <view class="org-info">
                <view class="org-title">社会组织：{{item.title}}</view>
                <view class="org-name">负责人：{{item.s_name}}</view>
                <view class="org-tel">联系电话：{{item.tel}}</view>
                <view class="org-more-info" bindtap="list_click">更多介绍</view>
            </view>

        </view>
        <view class="project-wrapper">
            <view class="">项目介绍</view>
            <view wx:for="{{project_list}}">
                <view class="pro-item">
                    {{item.name}}
                    <!-- <s class="pro-more-info">></s> -->
                    <icon class="iconfont icon-lianjie" bindtap="list_click"></icon>
                </view>
            </view>

        </view>


    </view>





</view>
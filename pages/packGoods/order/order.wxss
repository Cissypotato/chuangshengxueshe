/* pages/personal/shop/order/order.wxss */
.confirm-order-wrapper{
    height: 100vh;display: flex;flex-direction: column;justify-content: space-between
}
.addAddress{text-align: center;color: #aaa;padding: 20rpx 0;border-bottom: 1px solid #eee;line-height: 100rpx;}
.address-wrapper{padding: 30rpx;border-bottom: 1px solid #4A5BB9;line-height: 2em;color: #555}
.name-wrapper{display:inline-flex;justify-content: space-between;width: 100%}

.com-wrapper{width: 100%;display: flex;justify-content: space-between;padding: 30rpx;box-sizing: border-box;margin-top: 30rpx;}
.img-wrapper{width: 48%;height: 20vh;border-radius:10rpx;background: #eee;box-sizing: border-box}
.info-wrapper{width: 48%;display: flex;flex-direction: column;justify-content: space-between;box-sizing: border-box;padding: 20rpx 0 0rpx;}
.name{font-size: 38rpx;margin-top: 20rpx;}
.num,.score{line-height: 2em;color: #aaa}
.score>span{color: #6D7BC7}

.btn-wrapper{padding-bottom: 40rpx;}
.btn-wrapper>button{color: #fff;background: linear-gradient(120deg,#FFB445,#FF9B08);width: 90%;box-sizing: border-box}